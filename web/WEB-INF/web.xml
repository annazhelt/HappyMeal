<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>ShowRestaurant</servlet-name>
        <servlet-class>web.RestaurantServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowRestaurant</servlet-name>
        <url-pattern>/showRestaurants</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Comment</servlet-name>
        <servlet-class>web.CommentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Comment</servlet-name>
        <url-pattern>/showComments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Division</servlet-name>
        <servlet-class>web.DivisionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Division</servlet-name>
        <url-pattern>/showDivision</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>web.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <welcome-file-list><welcome-file>login.jsp</welcome-file></welcome-file-list>
</web-app>